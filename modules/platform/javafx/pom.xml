        <profile>
            <id>package-fx-app-image</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>3.5.0</version>
                        <executions>
                            <execution>
                                <id>jpackage-app-image</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>jpackage</executable>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <commandlineArgs>
                                        --type app-image
                                        --name ${platform.appName}
                                        --input target
                                        --main-jar ${platform.mainJar}
                                        --main-class ${platform.mainClass}
                                        --dest ../../../dist
                                    </commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <headless.args></headless.args>
            </properties>
        </profile>
        <profile>
            <id>package-fx-installer</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>3.5.0</version>
                        <executions>
                            <execution>
                                <id>jpackage-installer</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>jpackage</executable>
                                    <!--suppress UnresolvedMavenProperty -->
                                    <commandlineArgs>
                                        --type ${jpackage.installer}
                                        --name ${platform.appName}
                                        --input target
                                        --main-jar ${platform.mainJar}
                                        --main-class ${platform.mainClass}
                                        --dest ../../../dist
                                    </commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <headless.args></headless.args>
            </properties>
        </profile>
