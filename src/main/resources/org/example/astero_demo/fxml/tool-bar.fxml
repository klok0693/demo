<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import org.example.astero_demo.port.ui.ToolBarView?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<ToolBarView xmlns="http://javafx.com/javafx"
             xmlns:fx="http://javafx.com/fxml"
             fx:id="toolBarRoot"
             fx:controller="org.example.astero_demo.adapter.ui.ToolBarAdapter">

    <stylesheets>
        <URL value="@../css/tool-bar.css"/>
    </stylesheets>

    <fx:define>
        <ToggleGroup fx:id="insertElementButton" />
    </fx:define>

    <ToggleButton fx:id="RectBtn" text="Rect" onAction="#onInsertButtonAction" toggleGroup="$insertElementButton"/>
    <ToggleButton text="Square" toggleGroup="$insertElementButton"/>
    <ToggleButton text="Cycle" toggleGroup="$insertElementButton"/>
    <ToggleButton text="triangle" toggleGroup="$insertElementButton"/>

<!--    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>-->

</ToolBarView>
